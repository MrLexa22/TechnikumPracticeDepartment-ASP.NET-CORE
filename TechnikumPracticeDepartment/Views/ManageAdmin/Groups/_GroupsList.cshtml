@using TechnikumPracticeDepartment.Models.ModelsGroupsPages
@model IndexGroupModel
@addTagHelper *, TechnikumPracticeDepartment
<div class="table_container">
    <table class="table_cadri">
        <tr class="title_table">
            <th>Наименование группы</th>
            <th>Курс</th>
            <th>Специальность</th>
            <th></th>
        </tr>
        @foreach (var a in Model.list_groups)
        {
            <tr>
                <td>
                    <p class="point_to">
                        <a asp-action="AddEditGroup" asp-controller="Groups" asp-route-id="@a.ID_Group">
                            @a.NameGroups (@if (a.IsEnded == true){<text>-</text>}else{<text>+</text>}) 
                        </a>
                    </p>
                </td>
                <td>
                    <p>@a.Course.ToString()</p>
                </td>
                <td>
                    <p style="width: 90%; word-break: break-all;">@a.SpecializationName</p>
                </td>
                <td>
                    <a asp-action="AddEditGroup" asp-controller="Groups" asp-route-id="@a.ID_Group">
                        <img style="max-width: 30px;" src="~/images/edit.png">
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<div style="position: absolute; bottom: 0; left: 0; margin-top:15px;">
    <page-link page-model="Model.PageViewModel" page-action="GetList"
               page-url-typeSortListGroups="@(Model.FilterViewModel.TypeSortListGroups)"
               page-url-filterSpecialization="@(Model.FilterViewModel.FilterSpecialization)"
               page-url-filterCourse="@(Model.FilterViewModel.FilterCourse)"
               page-url-filterAvaliable="@(Model.FilterViewModel.FilterAvaliable)"
               page-url-search="@(Model.FilterViewModel.Search)"></page-link>
</div>