@model ModelErrorWindow

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.1/moment.min.js"></script>
<div class="container demo-1">
    <div class="content">
        <div id="large-header" class="large-header" style="height: 100%;">
            <canvas id="demo-canvas" width="941" height="775"></canvas>
            <div class="main-title">
                <div class="header_div">
                    <div>
                        <a>
                            <img class="logo_rea" src="~/images/Logotip.png">
                        </a>
                    </div>
                    <div>
                        <h2 class="pptext">Производственная практика</h2>
                    </div>
                </div>
                <div class="container_authentication">
                    <h1 class="h1Enter" style="margin-bottom: 0; text-align: center;">Восстановление</h1>
                    <h1 class="h1Enter" style="margin-top: 0; text-align: center;">пароля</h1>
                    @if (Model.IsRecovery == false || Model.IsRecovery == null)
                    {
                        <form asp-action="ForgotPasswordPost1" asp-controller="Account">
                            <div class="email-login">
                                <label asp-for="Login"> <b>Логин</b></label>
                                <input asp-for="Login" type="text" placeholder="Введите логин" name="Login">
                            </div>
                            <input class="cta-btn" type="submit" value="Выслать код на почту" />
                        </form>
                    }
                    else
                    {
                        <form asp-action="ForgotPasswordPost2" asp-controller="Account">
                            <div class="email-login">
                                <label asp-for="Login"> <b>Логин</b></label>
                                <input asp-for="Login" readonly type="text" placeholder="Введите логин" name="Login">
                                <label asp-for="Password"><b>Код с почты</b></label>
                                <input asp-for="Password" type="text" placeholder="Введите код с почты" name="Password">
                            </div>
                            <input class="cta-btn" type="submit" value="Восстановить пароль" />
                        </form>
                    }
                    <p class="or"><span>or</span></p>
                    <div style="text-align: center; margin-top: 10px;"><a asp-action="Index" asp-controller="Home">Вернуться к авторизации</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.IsError == true)
{
    <link rel="stylesheet" type="text/css" href="~/css/warning.css">
    <div class="modal_window details-modal" style="position: absolute; width: 100%; height: 100%; background: #000; opacity: 0.7; max-width: none; max-height: none;">
    </div>
    <div class="details-modal">
        <div class="details-modal-content" style="padding: 20px 20px 0 20px;">
            <div style="text-align: right;">
                <svg class="close_modal_btn" style="cursor: pointer;" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
                    <path fill-rule="evenodd" clip-rule="evenodd"
                      d="M13.7071 1.70711C14.0976 1.31658 14.0976 0.683417 13.7071 0.292893C13.3166 -0.0976311 12.6834 -0.0976311 12.2929 0.292893L7 5.58579L1.70711 0.292893C1.31658 -0.0976311 0.683417 -0.0976311 0.292893 0.292893C-0.0976311 0.683417 -0.0976311 1.31658 0.292893 1.70711L5.58579 7L0.292893 12.2929C-0.0976311 12.6834 -0.0976311 13.3166 0.292893 13.7071C0.683417 14.0976 1.31658 14.0976 1.70711 13.7071L7 8.41421L12.2929 13.7071C12.6834 14.0976 13.3166 14.0976 13.7071 13.7071C14.0976 13.3166 14.0976 12.6834 13.7071 12.2929L8.41421 7L13.7071 1.70711Z"
                      fill="black" />
                </svg>
            </div>
        </div>
        <div class="f-modal-alert">
            <div class="f-modal-icon f-modal-warning scaleWarning">
                <span class="f-modal-body pulseWarningIns"></span>
                <span class="f-modal-dot pulseWarningIns"></span>
            </div>
        </div>
        <p style="color: black; text-align: center; font-size:28px; font-weight:bold;">@Model.ErrorTitle!</p>
        <div class="details-modal-content">
            <p style="color: black;">@Model.ErrorMessage</p>
        </div>
    </div>
    <script type="text/javascript" src="~/js/warning_modal/warning_window.js"></script>
}
<script type="text/javascript" src="~/js/index/index-background.js"></script>
